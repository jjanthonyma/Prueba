@model IEnumerable<Mantenimiento.Models.Oficina>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Lista de Oficinas</h2>

<p>
    <a class="btn  btn-primary" href="~/Oficina/Agregar">Agregar Oficina</a>
    <a class="btn  btn-primary" href="~/Empleado/Index">Lista de Empleados</a>
</p>
<table class="table">
    <tr>
     
        <th>
Descripcion 
        </th>
        <th>
Telefono
        </th>
        <th>
Direccion   
        </th>
        <th>
Nombre
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>

        <td>
            @Html.DisplayFor(modelItem => item.descripcion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.telefono)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.direccion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.nombreofi)
        </td>
        <td>
        <td><a class="btn btn-xs  btn-default" href="~/Oficina/Editar/@item.idoficina">Editar</a> <a class="btn btn-xs  btn-primary" href="~/Oficina/Detalles/@item.idoficina">Ver</a> </td>

        </td>
    </tr>
}

</table>
